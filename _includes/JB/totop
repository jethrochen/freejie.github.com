<!--return to top with jquery-->
<script type="text/javascript">
$(function () {
    $(window).scroll(function () {
        if ($(this).scrollTop() > 100) {
            $('#totop a').fadeIn();
        } else {
            $('#totop a').fadeOut();
        }
    });

    // scroll body to 0px on click
    $('#totop a').click(function () {
        $('body,html').animate({
            scrollTop: 0
        }, 800);
        return false;
    });
});
</script>
